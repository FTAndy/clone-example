{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "commonJS",
    "lib": ["es6", "dom", "es2021"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
